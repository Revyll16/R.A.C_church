<%= form_with(model: event, local: true) do |form| %>

  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
  <%= form.label :location, class: "form-label" %>
  <%= form.text_field :location, class: "form-control", required: true %>
</div>

  <div class="mb-3">
  <%= form.label :start_date, class: "form-label" %>
  <%= form.datetime_local_field :start_date, class: "form-control", required: true %>
</div>

<div class="mb-3">
  <%= form.label :end_date, class: "form-label" %>
  <%= form.datetime_local_field :end_date, class: "form-control", required: true %>
</div>


  <%= form.submit class: 'btn btn-primary' %>
<% end %>
