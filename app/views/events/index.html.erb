<h1>Events</h1>
<%= link_to 'New Event', new_event_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td>
          <%= event.start_date ? event.start_date.strftime('%B %d, %Y %I:%M %p') : 'N/A' %>
        </td>
        <td>
          <%= event.end_date ? event.end_date.strftime('%B %d, %Y %I:%M %p') : 'N/A' %>
        </td>
        <td>
          <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
